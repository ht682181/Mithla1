<% layout("/layouts/boilerplate") -%>
<div class="container my-3">

  <!-- Page Header -->
  <div class="text-center mb-5">
    <h2 class="fw-bold text-primary">ðŸŽ“Add Student Management</h2>
    <p class="text-muted">Add & Manage Student Information</p>
  </div>

  <a href= "/show/student" 
   class="btn btn-dark shadow-sm px-4 py-2 rounded-pill fw-semibold d-inline-flex align-items-center gap-2 m-4"
   style="transition:0.3s; font-size:15px;">
   <i class="fa-solid fa-plus"></i> Show Student Data
</a>

  <!-- Student Form Card -->
  <div class="card shadow-lg border-0 rounded-4 bg-light-glass mb-5">
    <div class="card-header bg-primary text-white rounded-top-4">
      <h4 class="mb-0 fw-bold text-center">Add Student Data</h4>
    </div>
    <div class="card-body p-4">
      <form method="post" action="/add/studentData" novalidate class="needs-validation" id="passwordForm" enctype="multipart/form-data">
        
        <div class="row g-4">
          <div class="col-md-6">
            <label class="form-label fw-semibold" for="rollNo">Admin No</label>
            <input placeholder="Enter Admin No" name="data[rollNo]" class="form-control shadow-sm" id="rollNo" required>
          </div>
          <div class="col-md-6">
            <label class="form-label fw-semibold" for="name">Name</label>
            <input placeholder="Enter Name" name="data[name]" class="form-control shadow-sm" id="name" required>
          </div>
          <div class="col-md-6">
            <label class="form-label fw-semibold" for="fatherName">Father's Name</label>
            <input placeholder="Enter Father's Name" name="data[fatherName]" class="form-control shadow-sm" id="fatherName" required>
          </div>
          <div class="col-md-6">
            <label class="form-label fw-semibold" for="session">Session</label>
            <input placeholder="e.g. 2023-2026" name="data[session]" class="form-control shadow-sm" id="session" required>
          </div>
          <div class="col-md-6">
            <label class="form-label fw-semibold" for="class">Class & Year</label>
           <select name="data[class]" class="form-control shadow-sm" id="class" required>     
            <option value="">Choose class & year</option>     
            <% for(let data of classData){ %>       
              <option value="<%= data.class %>"><%= data.class %></option>     
            <% } %>   
          </select> 
          </div>

          <div class="col-md-6">
            <label class="form-label fw-semibold" for="semester">Semester</label>
            <select name="data[semester]" class="form-select shadow-sm" id="semester" required>
              <option value="">Choose semester</option>
              <% for(let i=1; i<=8; i++){ %>
                <option value="<%= i %>"><%= i %></option>
              <% } %>
            </select>
          </div>
          <div class="col-md-6">
            <label class="form-label fw-semibold" for="section">Section</label>
            <select name="data[section]" class="form-select shadow-sm" id="section" required>
              <option value="">Choose section</option>
              <% for(let data of sectionData){ %>       
              <option value="<%= data.name %>"><%= data.name %></option>     
            <% } %>  
            </select>
          </div>
          <div class="col-md-6">
            <label for="image" class="form-label fw-semibold">image</label>
            <input type="file" id="image" name="data[image]" class="form-control shadow-sm" placeholder="Choose a image">
          </div>
          <div class="col-md-6">
            <label class="form-label fw-semibold" for="email">Email</label>
            <input type="email" name="data[email]" class="form-control shadow-sm" id="email" placeholder="Enter Email">
          </div>
           <div class="col-md-6">
            <label for="password" class="form-label fw-semibold">Password</label>
            <input type="password" id="password" name="data[password]" class="form-control shadow-sm" placeholder="Create strong password (must be 6 length)" required>
          </div>

        </div>
        
        <div class="text-center mt-4">
          <button class="btn btn-gradient px-5 py-2 rounded-pill shadow-lg">ðŸ’¾ Save Student</button>
        </div>
      </form>
    </div>
  </div>

</div>

<!-- Custom CSS -->
<style>
  
  .bg-light-glass {
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(8px);
  }
  .btn-gradient {
    background: linear-gradient(45deg, #0d6efd, #6610f2);
    color: #fff;
    border: none;
  }
  .btn-gradient:hover {
    opacity: 0.9;
    color: #fff;
  }
</style>
