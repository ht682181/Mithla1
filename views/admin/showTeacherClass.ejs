
 
 <%- layout("/layouts/boilerplate") -%>

<div class="container my-3">

  <a href="/assign/teacher/subject/class"
     class="btn btn-dark shadow-sm px-4 py-2 rounded-pill fw-semibold d-inline-flex align-items-center gap-2">
    <i class="fa-solid fa-plus"></i> Assign New Class
  </a>

  <div class="card shadow-lg border-0 rounded-4 mt-4">
    <div class="card-header bg-dark text-white rounded-top-4">
      <h5 class="mb-0 fw-bold text-center">ðŸ“‹ Class, Semester,Subject or Section Details of <%= datas.name %></h5>
    </div>

    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle text-center">
          <thead class="table-primary">
            <tr>
              <th>Class Name</th>
              <th>Semester</th>
              <th>Section</th>
              <th>Subject</th>
              <th>Action</th>
            </tr>
          </thead>

       <tbody>
<% datas.class.forEach(cls => { %>

  <% cls.semesters.forEach(sem => { %>

    <% sem.sections.forEach(sec => { %>
      <tr>
        <td><%= cls.className %></td>

        <td>
          <span class="badge bg-info"><%= sem.semester %></span>
        </td>

        <td>
          <span class="badge bg-warning text-dark"><%= sec.section %></span>
        </td>

        <td>
          <% sec.subjects.forEach(sub => { %>
            <span class="badge bg-success me-1"><%= sub %></span>
          <% }) %>
        </td>

        <td>
         <form action="/delete/teacher/class/<%= cls._id %>/semester/<%= sem._id %>/section/<%= sec._id %>?_method=DELETE"
      method="POST">
  <button class="btn btn-danger btn-sm">
    Delete Section
  </button>
</form>


        </td>
      </tr>
    <% }) %>

  <% }) %>

<% }) %>
</tbody>

        </table>
      </div>
    </div>
  </div>
</div>


     