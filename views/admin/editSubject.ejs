<% layout("/layouts/boilerplate") -%>



    <div class="container my-3">

        <div class="card shadow-lg border-0 rounded-4 bg-light-glass mb-5">
            <div class="card-header bg-primary text-white rounded-top-4">
                <h4 class="mb-0 fw-bold text-center">Edit Subject</h4>
            </div>
            <div class="card-body p-4">
                <form action="/edit/subject/<%= data._id %>?_method=put" method="post" novalidate
                    class="needs-validation">
                    <div class="row g-4">

                        <div class="col-md-6">
                            <label for="name" class="form-label">Subject Name</label>
                            <input name="data[name]" class="form-control shadow-sm" id="name"
                                placeholder="Enter  subject name" value="<%=data.name  %>" required>
                        </div>

                        <div class="col-md-6">
                            <label for="code" class="form-label">Code</label>
                            <input name="data[code]" class="form-control shadow-sm" id="code"
                                placeholder="Enter the subject code" value="<%=data.code  %>" required>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-semibold" for="courseYear">Select Course & Year</label>
                            <select name="data[course]" class="form-control shadow-sm" id="courseYear" required>
                                <% for(let c of classData){ %>
                                    <option value="<%= c.class %>" <%=data && data.course===c.class ? "selected" : "" %>
                                        >
                                        <%= c.class %>
                                    </option>
                                    <% } %>
                            </select>


                        </div>


                        <div class="col-md-6">
                            <label class="form-label fw-semibold" for="semester">Semester</label>
                            <select name="data[semester]" class="form-control" id="semester" required>
                                <% for(let i=1; i<=8; i++){ %>
                                    <option value="<%= i %>" <%=data.semester==i ? "selected" : "" %>><%= i %>
                                    </option>
                                    <% } %>
                            </select>

                        </div>

                        <div class="col-md-6">
                            <label for="maxMarks" class="form-label">Maximum Marks</label>
                            <input name="data[maxMarks]" class="form-control shadow-sm" id="maxMarks"
                                placeholder="Enter max marks" value="<%=data.maxMarks  %>" required>
                        </div>


                        <div class="col-md-6">
                            <label for="minMarks" class="form-label">Minimum Marks</label>
                            <input name="data[minMarks]" class="form-control shadow-sm" id="minMarks"
                                placeholder="Enter min marks" value="<%=data.minMarks %>" required>
                        </div>

                        <div class="col-md-6">
                            <label for="subjectType" class="form-label">Subject Type</label>
                            <input name="data[subjectType]" class="form-control shadow-sm" id="subjectType"
                                placeholder="Enter subject type" value="<%=data.subjectType %>" required list="option">
                            <datalist id="option">
                                <option value="Theory">Theory</option>
                                <option value="Practical">Practical</option>
                            </datalist>
                        </div>

                    </div>

                    <div class="text-center mt-4">
                        <button class="btn btn-gradient px-5 py-2 rounded-pill shadow-lg">Edit Subject</button>
                    </div>
                </form>
            </div>
        </div>

    </div>

    <style>
        .bg-light-glass {
            background: rgba(255, 255, 255, 0.8);
            backdrop-filter: blur(8px);
        }

        .btn-gradient {
            background: linear-gradient(45deg, #0d6efd, #6610f2);
            color: #fff;
            border: none;
        }

        .btn-gradient:hover {
            opacity: 0.9;
            color: #fff;
        }
    </style>