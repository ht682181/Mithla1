<% layout("/layouts/boilerplate") -%>
<div class="container my-3">

  
  <!-- Student Table -->
  <div class="card shadow-lg border-0 rounded-4">
    <div class="card-header bg-dark text-white rounded-top-4">
      <h4 class="mb-0 fw-bold text-center">ðŸ“‹ Student Details</h4>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle text-center shadow-sm">
          <thead class="table-primary">
            <tr>
              <th>Admin No</th>
              <th>Name</th>
              <th>Father's Name</th>
              <th>Course</th>
              <th>Semester</th>
              <th>Section</th>
               <th>Subject</th>
              <th>Session</th>
              <th>Email</th>
              <th>Action</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <% for (let data of datas) { %>
              <tr>
                <td><%= data.rollNo %></td>
                <td>  <a href="/student/profile/<%= data._id %>" style="color: black; text-decoration: none;"><%= data.name %></a></td>
                <td><%= data.fatherName %></td>
                <td><%= data.class %></td>
                <td><%= data.semester %></td>
                <td><%= data.section %></td>
                <td>
                 <a href="/show/student/subject/<%= data.rollNo %>" class="btn btn-sm btn-outline-secondary" style="color: black; text-decoration: none;">View</a>
                </td>
                <td><%= data.session %></td>
                <td><%= data.email %></td>
                <td>
                  <a href="/edit/student/<%= data._id %>" class="btn btn-sm btn-outline-warning me-1"><i class="fa-solid fa-pen"></i></a>
                  <form action="/delete/student/<%= data._id %>?_method=Delete" method="post" style="display:inline;">
                    <button class="btn btn-sm btn-outline-danger"><i class="fa-solid fa-trash"></i></button>
                  </form>
                </td>
                <td>
                  <form action="/student/status/<%= data.rollNo %>" method="get">
                    <button class="btn btn-sm btn-outline-secondary">View</button>
                  </form>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<!-- Custom CSS -->
<style>
  
  .bg-light-glass {
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(8px);
  }
  .btn-gradient {
    background: linear-gradient(45deg, #0d6efd, #6610f2);
    color: #fff;
    border: none;
  }
  .btn-gradient:hover {
    opacity: 0.9;
    color: #fff;
  }
</style>
