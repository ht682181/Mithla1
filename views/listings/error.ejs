<% if(statusCode===500){ %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Mithla</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel=" website icon" type="png" href="/images/logo.png">
  <style>
    body {
      background: #f8f9fa;
      font-family: 'Segoe UI', Tahoma, sans-serif;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
    }

    .error-container {
      text-align: center;
      background: #fff;
      padding: 40px;
      border-radius: 15px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
      max-width: 450px;
      width: 100%;
    }

    .error-code {
      font-size: 6rem;
      font-weight: 700;
      color: #dc3545;
      margin-bottom: 10px;
    }

    .error-message {
      font-size: 1.5rem;
      font-weight: 500;
      color: #212529;
      margin-bottom: 15px;
    }

    .error-description {
      font-size: 1rem;
      color: #6c757d;
      margin-bottom: 25px;
    }

    .btn-home {
      background-color: #0d6efd;
      color: #fff;
      border-radius: 8px;
      padding: 10px 20px;
      font-size: 1rem;
      text-decoration: none;
    }

    .btn-home:hover {
      background-color: #0b5ed7;
      text-decoration: none;
    }
  </style>
</head>
<body>
  <div class="error-container">
    <div class="error-code">404</div>
    <div class="error-message">Error</div>
    <p class="error-description">
     <%= message %>
    </p>
    <!-- <a href="/" class="btn-home">Go to Home</a> -->
  </div>
</body>
</html>
 <%}%>
