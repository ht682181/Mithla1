<% layout("/layouts/boilerplateTeacher") -%>

  <div class="container mt-4">

    <!-- Heading -->
    <div class="text-center mb-4">
      <h2 class="fw-bold text-primary">ğŸ“Š Teacher Dashboard</h2>
      <p class="text-muted">Overview of your classes, subjects and Take Attendance</p>
    </div>

    <div class="row g-4">

      <!-- Classes Card -->


      <div class="col-md-4">
        <div class="card shadow-lg h-100 border-0"
          style="border-radius: 20px; transition: transform 0.3s; cursor: pointer; background: linear-gradient(135deg, #1d8cf8, #3358f4);">
          <div class="card-body text-center p-5">
            <i class="bi bi-calendar-check-fill fs-1 mb-3"></i>
            <h4 class="fw-bold mb-2">ğŸ« Classes</h4>
            <% let classCount=teacherData.class.length; %>
              <h2 class="display-5 fw-bold mt-2">
                <%= classCount %>
              </h2>
          </div>
        </div>
      </div>


      <!-- subject card -->

      <div class="col-md-4">
        <div class="card shadow-lg h-100 border-0"
          style="border-radius: 20px; transition: transform 0.3s; cursor: pointer; background: linear-gradient(135deg, #00f2c3, #009975);">
          <div class="card-body text-center p-5">
            <i class="bi bi-book-fill fs-1 mb-3"></i>
            <h4 class="fw-bold mb-2">ğŸ“˜ Subjects</h4>
            <p class="mb-3">Check subject and others</p>
            <a href="/show/teacher/class/subject/<%= teacherData._id %>" class="btn btn-light rounded-pill px-4 shadow-sm">Go</a>

          </div>
        </div>
      </div>

      <!-- Students Card -->
      <div class="col-md-4">
        <div class="card shadow-lg h-100 border-0"
          style="border-radius: 20px; transition: transform 0.3s; cursor: pointer; background: linear-gradient(135deg, #ff8d72, #ff3d00);">
          <div class="card-body text-center p-5">
            <i class="bi bi-person-fill fs-1 mb-3"></i>
            <h4 class="fw-bold mb-2">Profile</h4>
            <p class="mb-3">Your profile information</p>
            <a href="/teacher/profile" class="btn btn-light rounded-pill px-4 shadow-sm">Go</a>
          </div>
        </div>
      </div>

    </div>

    <style>
      /* Hover animation for cards */
      .card:hover {
        transform: translateY(-10px) scale(1.02);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3);
      }

      /* Smooth transition for buttons */
      .btn-light:hover {
        transform: scale(1.05);
        transition: transform 0.2s;
      }
    </style>